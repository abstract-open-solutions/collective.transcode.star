<div tal:define="mp4path view/mp4/path|nothing" tal:attributes="class python:mp4path and 'autoFlowPlayer' or ''">
<a tal:omit-tag="not: mp4path" tal:attributes="href string:${view/mp4/address|nothing}/${view/mp4/path|nothing}">
<img tal:attributes="src string:${view/jpeg/address|nothing}/${view/jpeg/path|nothing}" />
</a>
</div>
<script>
$f("player", "http://releases.flowplayer.org/swf/flowplayer-3.2.5.swf", {

	clip: {
		// track start event for this clip
		onStart: function(clip) {
			piwikTracker.trackPageView();
		},

		// track pause event for this clip. time (in seconds) is also tracked
		onPause: function(clip) {
		},

		// track stop event for this clip. time is also tracked
		onStop: function(clip) {
		},

		// track finish event for this clip
		onFinish: function(clip) {
		}
	},

	// show stop button so we can see stop events too
	plugins: {
		controls: {
			stop: true
		}
	}

});
</script>
