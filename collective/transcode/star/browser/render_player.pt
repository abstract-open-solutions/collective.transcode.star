<tal:video tal:define="width view/request/width|python:630;
                       height python:int(int(width)/1.75);
                       helpers view/helpers">

<div class="video-wrapper">
    <video id="main-video" controls
        style="width: 100%; height: 100%;"
        tal:define="mp4 string:${helpers/profiles/mp4-low/address|nothing}/${helpers/profiles/mp4-low/path|nothing};
                    webm string:${helpers/profiles/webm-low/address|nothing}/${helpers/profiles/webm-low/path|nothing};
                    jpeg view/context/thumbnailImage/absolute_url|string:${helpers/profiles/jpeg/address|nothing}/${helpers/profiles/jpeg/path|nothing}"
        tal:attributes="poster jpeg; width width; height height"
        controls="controls" preload="metadata">
       <source tal:condition="helpers/profiles/webm-low/path|helpers/profiles/webm-high/path|nothing"
           tal:attributes="src webm" type="video/webm" />
       <source tal:condition="helpers/profiles/mp4-low/path|helpers/profiles/mp4-high/path|nothing"
           tal:attributes="src mp4" type="video/mp4" />
       <object tal:condition="helpers/profiles/mp4-low/path|helpers/profiles/mp4-high/path|nothing"
           tal:attributes="width width; height height"
           type="application/x-shockwave-flash"
           data="++resource++collective.mediaelementjs/flashmediaelement.swf">
           <param name="movie" value="++resource++collective.mediaelementjs/flashmediaelement.swf" />
           <param name="flashvars" tal:attributes="value string:controls=true&poster=${jpeg}&file=${mp4}" />
           <!-- Image as a last resort -->
           <img class="splash-screen"
                alt="Splash screen"
                tal:attributes="src jpeg; width width; height height" title="No video playback capabilities" />
       </object>
    </video>

    <div class="videobar">
        <div class="hi-lo" tal:condition="helpers/profiles/webm-high/path|nothing">
            <a id="player-low" style="display:none">
                <span>View Standard Quality</span>
            </a>
            <a id="player-high">
                <span>View High Quality</span>
            </a>
        </div>
        <div class="download">
            <a id="download">
                <span>Download</span>
            </a>
        </div>
        <div class="share">
            <a id="share">
                <span>Share</span>
            </a>
        </div>

        <tal:block tal:condition="helpers/showDownload">
            <ul id="dl-links"
                style="display:none"
                tal:condition="helpers/fieldname|nothing"
                tal:define="download_links helpers/download_links">
                <li tal:repeat="name download_links/keys">
                    <a tal:define="dlink python:download_links[name]"
                       class="original"
                       data-profilename="original"
                       tal:attributes="href             dlink/url;
                                       title            dlink/title;
                                       class            name;
                                       data-profilename name">
                        <span tal:content="dlink/title" />
                    </a>
                </li>
            </ul>
        </tal:block>

        <div id="share-box" style="display:none">
            <div class="embed-box">
                Embed <textarea rows="1" onclick="this.focus();this.select();"><span tal:replace="string:<iframe src='${here/absolute_url}/embed_view' frameborder='0' width='630' height='460'></iframe>" /></textarea>
            </div>
            <ul>
                <li class="social">
                    <a tal:attributes="href string:http://www.twitter.com/share?url=${here/absolute_url}"
                       target="_blank"
                       class="twitter-share-button"
                       data-lang="en">
                       <img alt="Twitter icon" src="++resource++collective.transcode.images/twitter.png" />
                    </a>
                </li>
                <li class="social">
                    <a tal:attributes="href string:http://www.facebook.com/share.php?u=${here/absolute_url}"
                       target='_blank'>
                        <img alt="Facebook icon" src='++resource++collective.transcode.images/facebook.png' />
                    </a>
                </li>
                <li><a class="unisubs" style="display:none" target="_blank"><img src="++resource++collective.transcode.images/unisubs.png" /></a></li>
            </ul>
        </div>
    </div>
</div>


<script>
var isInIframe = (window.location != window.parent.location) ? true : false;
if (isInIframe){
    var v = $('video#main-video');
    v.width($(window).width());
    v.height($(window).height() - 100);
}

var player = new MediaElementPlayer('video#main-video');
event = Event;


$('div.download').mouseenter(
    function(){
        $('#share-box').hide();
        $('#dl-links').show();
    }
);

$('div.share').mouseenter(
    function(){
        $('#dl-links').hide();
        $('#share-box').show();
        var unisubs_url = $('.unisubs-tabTextShare').parent().attr('href');
        if (unisubs_url){
            $('#share-box a.unisubs').attr('href',unisubs_url);
            $('#share-box a.unisubs').show();
        }
    }
);

$('div.videobar').mouseleave(
    function(){
        $('#dl-links').fadeOut(500);
        $('#share-box').fadeOut(500)
    }
);

</script>

<script tal:condition="helpers/profiles/webm-high/path|nothing" language="JavaScript" tal:content="string:$(function(){
    $('#player-low').click(function () {
        createCookie('videores', 'low');
        jq('#player-high')[0].style.display = '';
        jq('#player-low')[0].style.display = 'none';
        var extension = $('video')[0].currentSrc.split('.')[$('video')[0].currentSrc.split('.').length -1];
        if (extension == 'webm') {
            player.setSrc('${helpers/profiles/webm-low/address|nothing}/${helpers/profiles/webm-low/path|nothing}');
        } else {
            player.setSrc('${helpers/profiles/mp4-low/address|nothing}/${helpers/profiles/mp4-low/path|nothing}');
        }
        player.play();
        return false
    });

    $('#player-high').click(function () {
        createCookie('videores', 'high');
        jq('#player-high')[0].style.display = 'none';
        jq('#player-low')[0].style.display = '';
        var extension = $('video')[0].currentSrc.split('.')[$('video')[0].currentSrc.split('.').length -1];
        if (extension == 'webm') {
            player.setSrc('${helpers/profiles/webm-high/address|nothing}/${helpers/profiles/webm-high/path|nothing}');
        } else {
            player.setSrc('${helpers/profiles/mp4-high/address|nothing}/${helpers/profiles/mp4-high/path|nothing}');
        }
        player.play();
        return false
    });

});">
</script>

<script tal:condition="view/show_subs" type="text/javascript" src="++resource++collective.transcode.js/unisubs-widgetizer.js"></script>
<script type="text/javascript">
// Fullscreen video width fix (unisubs/mediaelementjs conflict)
$('.mejs-fullscreen-button button').live('click',function(){
    $('#main-video').attr('style','');
    if ($(this).parent().hasClass('mejs-unfullscreen')) {
        $('span.unisubs-captionSpan').css('margin-top','auto');
        $('span.unisubs-captionSpan').css('margin-left','40%');
        $('span.unisubs-captionSpan').css('margin-right','auto');
        $('span.unisubs-captionSpan').css('margin-bottom','40px');
    } else {
        $('span.unisubs-captionSpan').css('margin-top','0');
        $('span.unisubs-captionSpan').css('margin-left','0');
    }
});
</script>

</tal:video>
